{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="card shadow p-4 mx-auto" style="max-width:900px;">
        <h1 class="text-center mb-4">Selecciona tema y configura el examen</h1>
        <form action="{{ path('app_exam') }}" method="get" class="text-center">
            <div class="mb-3">
                <label for="tema" class="form-label fw-bold">Selecciona un tema</label>
                <select name="tema" id="tema" class="form-select text-center w-75 mx-auto" required>
                    <option value="">-- Selecciona --</option>
                    {% for tema in temas %}
                        <option value="{{ tema.id }}">{{ tema.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="row justify-content-center">
                <div class="col-6 col-md-3 mb-3">
                    <label class="form-label fw-bold">Número de preguntas</label>
                    <input type="number" name="cantidad" class="form-control text-center" min="1" max="40" value="10" required>
                </div>
                <div class="col-6 col-md-3 mb-3">
                    <label class="form-label fw-bold">Tiempo (min)</label>
                    <input type="number" name="tiempo" class="form-control text-center" min="0" max="180" value="0">
                    <div class="form-text">0 = sin límite</div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg mt-3">Comenzar examen</button>
        </form>
    </div>
</div>
{% endblock %}
