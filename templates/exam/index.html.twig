{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="card shadow p-4 mx-auto" style="max-width:900px;">
        <h1 class="text-center mb-4">Selecciona tema y configura el examen</h1>
        <form action="{{ path('app_exam') }}" method="get" class="text-center">
            <div class="mb-3">
                <label for="tema" class="form-label fw-bold">Selecciona un tema</label>
                <select name="tema" id="tema" class="form-select text-center w-75 mx-auto" required>
                    <option value="">-- Selecciona --</option>
                    {% for tema in temas %}
                        <option value="{{ tema.id }}">{{ tema.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="row justify-content-center">
                <div class="col-6 col-md-3 mb-3">
                    <label class="form-label fw-bold">N√∫mero de preguntas</label>
                    <input type="number" name="cantidad" class="form-control text-center" min="1" max="40" value="10" required>
                </div>
                <div class="col-6 col-md-3 mb-3">
                    <label class="form-label fw-bold">Tiempo (min)</label>
                    <input type="number" name="tiempo" class="form-control text-center" min="0" max="180" value="0">
                    <div class="form-text">0 = sin l√≠mite</div>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-3">
                <button type="submit" class="btn btn-primary btn-lg">üìù Comenzar Examen</button>
                <button type="button" class="btn btn-success btn-lg" onclick="startPractice()">üéØ Modo Pr√°ctica</button>
            </div>
        </form>
    </div>
</div>

<script>
function startPractice() {
    const tema = document.getElementById('tema').value;
    const cantidad = document.querySelector('input[name="cantidad"]').value;
    
    if (!tema) {
        alert('Por favor selecciona un tema');
        return;
    }
    
    window.location.href = `{{ path('app_practice') }}?tema=${tema}&cantidad=${cantidad}`;
}
</script>
{% endblock %}
