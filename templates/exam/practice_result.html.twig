{% extends 'base.html.twig' %}

{% block title %}Resultado - Pregunta {{ current }}/{{ total }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📊 Resultado</h5>
                    <span class="badge bg-primary">{{ current }}/{{ total }}</span>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6>{{ pregunta.texto }}</h6>
                    </div>

                    {% if acertada %}
                        <div class="alert alert-success">
                            <h5>✅ ¡Correcto!</h5>
                            <p class="mb-0">Has seleccionado la respuesta correcta.</p>
                        </div>
                    {% else %}
                        <div class="alert alert-danger">
                            <h5>❌ Incorrecto</h5>
                            <p class="mb-1"><strong>Tu respuesta:</strong> {{ respuesta_usuario|upper }}</p>
                            <p class="mb-0"><strong>Respuesta correcta:</strong> {{ pregunta.correcta|upper }}</p>
                        </div>
                    {% endif %}

                    <div class="mb-4">
                        <h6>Opciones:</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1 {% if pregunta.correcta|lower == 'a' %}text-success fw-bold{% endif %}">
                                    A) {{ pregunta.opcionA }}
                                </p>
                                <p class="mb-1 {% if pregunta.correcta|lower == 'b' %}text-success fw-bold{% endif %}">
                                    B) {{ pregunta.opcionB }}
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1 {% if pregunta.correcta|lower == 'c' %}text-success fw-bold{% endif %}">
                                    C) {{ pregunta.opcionC }}
                                </p>
                                <p class="mb-1 {% if pregunta.correcta|lower == 'd' %}text-success fw-bold{% endif %}">
                                    D) {{ pregunta.opcionD }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid">
                        {% if current < total %}
                            <a href="{{ path('app_practice_next') }}" class="btn btn-primary">➡️ Siguiente Pregunta</a>
                        {% else %}
                            <a href="{{ path('app_practice_summary') }}" class="btn btn-success">📋 Ver Resumen Final</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
