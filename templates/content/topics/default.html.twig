{% extends 'base.html.twig' %}

{% block title %}{{ tema.nombre }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card">
        <div class="card-body">
            <h1>{{ tema.nombre }}</h1>
            
            <div class="alert alert-info">
                <h4>📝 Contenido en desarrollo</h4>
                <p>El contenido para este tema está siendo preparado. Mientras tanto, puedes:</p>
                <ul>
                    <li>Practicar con el examen de este tema</li>
                    <li>Revisar otros temas disponibles</li>
                </ul>
            </div>

            <div class="mt-4">
                <a href="{{ path('app_exam') }}?tema={{ tema.id }}&cantidad=10&tiempo=0" class="btn btn-primary">
                    🎯 Hacer examen de este tema
                </a>
                <a href="{{ path('app_content_index') }}" class="btn btn-outline-secondary">
                    📚 Ver todos los temas
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
